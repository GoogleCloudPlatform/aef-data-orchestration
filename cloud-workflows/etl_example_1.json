main:
  params: [args]
  steps:
   - workflow:
         try:
             steps:
                 
               - Level_1:
                   parallel:
                       branches:
                           
                           - Level_1_Thread_1:
                               steps:
                                   
                                    - etl_1_load_step_Group:
                                       steps:
                                          - etl_1_load_step:
                                              call: http.post
                                              args:
                                                  url: "https://us-central1-analytics-engg-framework-demo.cloudfunctions.net/orch-framework-intermediate"
                                                  auth:
                                                      type: OIDC
                                                  headers:
                                                      Content-Type: "application/json"
                                                  body:
                                                      call_type: "get_id"
                                                      workflow_name: "${args.workflow_name}"
                                                      execution_id: ${sys.get_env("GOOGLE_CLOUD_WORKFLOW_EXECUTION_ID")}
                                                      job_name: "etl_1_load_step"
                                                      function_url_to_call: "https://us-central1-analytics-engg-framework-demo.cloudfunctions.net/orch-framework-dataflow-executor"
                                                      query_variables: "${args.query_variables}"
                                                      workflow_properties: "${args.workflow_properties}"
                                                      step_properties: > 
                                                                 {"jobs_definitions_bucket":"analytics-engg-framework-demo_aef_jobs_bucket"}
                                              result: async_job_id_1
                                              next: "etl_1_load_step_Wait"
                                          - etl_1_load_step_Wait:
                                              call: "sys.sleep"
                                              args:
                                                  seconds: 20
                                              next: "etl_1_load_step_Status"
                                          - etl_1_load_step_Status:
                                              call: http.post
                                              args:
                                                  url: "https://us-central1-analytics-engg-framework-demo.cloudfunctions.net/orch-framework-intermediate"
                                                  auth:
                                                      type: OIDC
                                                  headers:
                                                      Content-Type: "application/json"
                                                  body:
                                                      call_type: "get_status"
                                                      async_job_id: ${async_job_id_1.body}
                                                      workflow_name: "${args.workflow_name}"
                                                      execution_id: ${sys.get_env("GOOGLE_CLOUD_WORKFLOW_EXECUTION_ID")}
                                                      job_name: "etl_1_load_step"
                                                      function_url_to_call: "https://us-central1-analytics-engg-framework-demo.cloudfunctions.net/orch-framework-dataflow-executor"
                                                      query_variables: "${args.query_variables}"
                                                      workflow_properties: "${args.workflow_properties}"
                                              result: job_status_1
                                              next: "etl_1_load_step_EvaluateStatus"
                                          - etl_1_load_step_EvaluateStatus:
                                              switch:
                                                - condition: ${job_status_1.body == "success"}
                                                  next: "etl_2_trnf_step1"
                                              next: "etl_1_load_step_Wait"

                                    - etl_2_trnf_step1_Group:
                                       steps:
                                          - etl_2_trnf_step1:
                                              call: http.post
                                              args:
                                                  url: "https://us-central1-analytics-engg-framework-demo.cloudfunctions.net/orch-framework-intermediate"
                                                  auth:
                                                      type: OIDC
                                                  headers:
                                                      Content-Type: "application/json"
                                                  body:
                                                      call_type: "get_id"
                                                      workflow_name: "${args.workflow_name}"
                                                      execution_id: ${sys.get_env("GOOGLE_CLOUD_WORKFLOW_EXECUTION_ID")}
                                                      job_name: "etl_2_trnf_step1"
                                                      function_url_to_call: "https://us-central1-analytics-engg-framework-demo.cloudfunctions.net/orch-framework-simple-dataform-query-executor"
                                                      query_variables: "${args.query_variables}"
                                                      workflow_properties: "${args.workflow_properties}"
                                                      step_properties: > 
                                                                 {"jobs_definitions_bucket":"analytics-engg-framework-demo_aef_jobs_bucket"}
                                              result: async_job_id_1
                                              next: "etl_2_trnf_step1_Wait"
                                          - etl_2_trnf_step1_Wait:
                                              call: "sys.sleep"
                                              args:
                                                  seconds: 5
                                              next: "etl_2_trnf_step1_Status"
                                          - etl_2_trnf_step1_Status:
                                              call: http.post
                                              args:
                                                  url: "https://us-central1-analytics-engg-framework-demo.cloudfunctions.net/orch-framework-intermediate"
                                                  auth:
                                                      type: OIDC
                                                  headers:
                                                      Content-Type: "application/json"
                                                  body:
                                                      call_type: "get_status"
                                                      async_job_id: ${async_job_id_1.body}
                                                      workflow_name: "${args.workflow_name}"
                                                      execution_id: ${sys.get_env("GOOGLE_CLOUD_WORKFLOW_EXECUTION_ID")}
                                                      job_name: "etl_2_trnf_step1"
                                                      function_url_to_call: "https://us-central1-analytics-engg-framework-demo.cloudfunctions.net/orch-framework-simple-dataform-query-executor"
                                                      query_variables: "${args.query_variables}"
                                                      workflow_properties: "${args.workflow_properties}"
                                              result: job_status_1
                                              next: "etl_2_trnf_step1_EvaluateStatus"
                                          - etl_2_trnf_step1_EvaluateStatus:
                                              switch:
                                                - condition: ${job_status_1.body == "success"}
                                                  next: "continue"
                                              next: "etl_2_trnf_step1_Wait"

                           - Level_1_Thread_2:
                               steps:
                                   
                                    - etl_2_trnf_step2_Group:
                                       steps:
                                          - etl_2_trnf_step2:
                                              call: http.post
                                              args:
                                                  url: "https://us-central1-analytics-engg-framework-demo.cloudfunctions.net/orch-framework-intermediate"
                                                  auth:
                                                      type: OIDC
                                                  headers:
                                                      Content-Type: "application/json"
                                                  body:
                                                      call_type: "get_id"
                                                      workflow_name: "${args.workflow_name}"
                                                      execution_id: ${sys.get_env("GOOGLE_CLOUD_WORKFLOW_EXECUTION_ID")}
                                                      job_name: "etl_2_trnf_step2"
                                                      function_url_to_call: "https://us-central1-analytics-engg-framework-demo.cloudfunctions.net/orch-framework-simple-dataform-query-executor"
                                                      query_variables: "${args.query_variables}"
                                                      workflow_properties: "${args.workflow_properties}"
                                                      step_properties: > 
                                                                 {"jobs_definitions_bucket":"analytics-engg-framework-demo_aef_jobs_bucket"}
                                              result: async_job_id_1
                                              next: "etl_2_trnf_step2_Wait"
                                          - etl_2_trnf_step2_Wait:
                                              call: "sys.sleep"
                                              args:
                                                  seconds: 5
                                              next: "etl_2_trnf_step2_Status"
                                          - etl_2_trnf_step2_Status:
                                              call: http.post
                                              args:
                                                  url: "https://us-central1-analytics-engg-framework-demo.cloudfunctions.net/orch-framework-intermediate"
                                                  auth:
                                                      type: OIDC
                                                  headers:
                                                      Content-Type: "application/json"
                                                  body:
                                                      call_type: "get_status"
                                                      async_job_id: ${async_job_id_1.body}
                                                      workflow_name: "${args.workflow_name}"
                                                      execution_id: ${sys.get_env("GOOGLE_CLOUD_WORKFLOW_EXECUTION_ID")}
                                                      job_name: "etl_2_trnf_step2"
                                                      function_url_to_call: "https://us-central1-analytics-engg-framework-demo.cloudfunctions.net/orch-framework-simple-dataform-query-executor"
                                                      query_variables: "${args.query_variables}"
                                                      workflow_properties: "${args.workflow_properties}"
                                              result: job_status_1
                                              next: "etl_2_trnf_step2_EvaluateStatus"
                                          - etl_2_trnf_step2_EvaluateStatus:
                                              switch:
                                                - condition: ${job_status_1.body == "success"}
                                                  next: "continue"
                                              next: "etl_2_trnf_step2_Wait"

         except:
             as: e
             steps:
                 - log:
                     call: sys.log
                     args:
                         data: ${e}
                 - unhandled_exception:
                     raise: ${e}